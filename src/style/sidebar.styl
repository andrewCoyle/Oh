.sidebar
  display flex
  flex-flow column wrap
  flex 0 1 auto
  width 25%
  height 100%
  border-left 1px solid #e2e2e2
  overflow hidden
  background-color #fff

  &.minimized
    width auto
    .top-menu>*:not(.minimize),
    .comment
      display none

  .top-menu
    display flex
    flex-row row wrap
    justify-content space-between
    padding 10px
    border-bottom 1px solid #e2e2e2